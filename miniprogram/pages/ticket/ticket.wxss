/* miniprogram/pages/ticket/ticket.wxss */

.container{
  width: 100%;
  height: 100%;
  background: #fcfcfc;
}
.scroll-view{
  position: fixed;
  top: 0rpx;
  left: 0rpx;

  width: 100%;
  height: 90%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
.address{
  width: 100%;
  height: 130rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;

  border-top: 1rpx dashed #a4f50e;
  border-bottom: 1rpx dashed #a4f50e;
}

.address .address-item{
  width: 80%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.address-item .address-icon{
  width: 40rpx;
  height: 60rpx;
}

.address-item .address-desc{
  width: auto;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-start;
  margin-left: 20rpx;
}

.address-desc .address-rcv-desc{
  width: auto;
  height: 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.address-rcv-desc .address-rcv-people{
  width: auto;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 25rpx;
}

.address-rcv-desc .address-rcv-phone{
  width: auto; 
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 25rpx;
  margin-left: 20rpx;
}

.address-desc-value{
  width: auto;
  height: 60rpx;
   line-height: 60rpx;
  text-align: center;
  font-size: 20rpx;
}

.address-modify-icon{
  width: 35rpx;
  height: 35rpx;

}

.address-modify-icon{
  width: 35rpx;
  height: 35rpx;
}

.ticket-total{
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #d4d4d4
}

.ticket-name{
  width: auto;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 35rpx;
  margin-left: 20rpx;
}

.ticket-total-item{
  width: auto;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 25rpx;
  margin-right: 20rpx;
}

.ticket-time{
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #d4d4d4
}

.ticket-time-title{
  width: auto;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 30rpx;
  margin-left: 20rpx;
}

.ticket-time-select{
  width: auto;
  height: 60rpx;

  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin-right: 20rpx;
}

.ticket-time-select-title{
  width: auto;
   height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 30rpx;
  margin-right: 10rpx;
}

.ticket-time-select-icon{
  width: 30rpx;
  height: 30rpx;
}

.ticket-list-item{
  width: 100%;
  height: 150rpx;

  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  background: #ececec;
  border-bottom: 1rpx solid #d4d4d4;
}

.ticket-item-info{
  width: 70%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.ticket-item-icon{
  width: 125rpx;
  height: 125rpx;
}

.ticket-item-desc{
  width: 70%;
  height: 125rpx;
   display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

.ticket-item-tilte{
  width: 100%;
  height: 80rpx;
  line-height: 40rpx;
  text-align: left;
  font-size: 30rpx;
}

.ticket-item-price-desc{
  width:100%;
  height: 40rpx;

  line-height: 40rpx;
  text-align: left;
  font-size: 25rpx;
}

.ticket-item-count{
  width: 10%;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 15rpx;
}

.ticket-item-price{
  width: 20%;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 20rpx;
}





