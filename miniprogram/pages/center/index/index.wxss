/* miniprogram/pages/center/index/index.wxss */
page{
  width: 100%;
  height: 100%;
  background: #f4f4f4;
}

.container{
  width: 100%;
  height: auto;
  background: #f4f4f4;
  overflow: hidden;
}

.profile-info{
  width: 100%;
  height: 280rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: flex-start;

  background: #3333;
  border-radius: 20rpx;
}

.profile-info .avatar{
  width: 148rpx;
  height: 148rpx;
  border-radius: 50%;
}

.profile-info .info{
  width: 150rpx;
  height: 85rpx;
  padding-left: 32.5rpx;
}

.profile-info .name{
  display: block;
  height: 45rpx;
  line-height: 45rpx;
  color: #fff;
  font-size: 37.5rpx;
  margin-bottom: 10rpx;
}

.get-info{
  width: 100%;
  height: 45rpx;
  border-radius: 10rpx;
  line-height: 45rpx;
  text-align: center;
}

