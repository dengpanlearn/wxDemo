/* miniprogram/pages/shopping/shopping.wxss */
.container{
  width: 100%;
  height: 100%;
  background: #fcfcfc;
}
.scroll-view{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.address{
  width: 100%;
  height: 130rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;

  border-top: 1rpx dashed #a4f50e;
  border-bottom: 1rpx dashed #a4f50e;
}

.address .address-item{
  width: 80%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.address-item .address-icon{
  width: 40rpx;
  height: 60rpx;
}

.address-item .address-desc{
  width: auto;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-start;
  margin-left: 20rpx;
}

.address-desc .address-rcv-desc{
  width: auto;
  height: 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.address-rcv-desc .address-rcv-people{
  width: auto;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 25rpx;
}

.address-rcv-desc .address-rcv-phone{
  width: auto; 
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 25rpx;
  margin-left: 20rpx;
}

.address-desc-value{
  width: auto;
  height: 60rpx;
   line-height: 60rpx;
  text-align: center;
  font-size: 20rpx;
}

.address-modify-icon{
  width: 35rpx;
  height: 35rpx;
}
