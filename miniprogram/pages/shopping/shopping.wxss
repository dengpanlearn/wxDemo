/* miniprogram/pages/shopping/shopping.wxss */
.container{
  width: 100%;
  height: 100%;
  background: #fcfcfc;
}
.scroll-view{
  position: fixed;
  top: 0rpx;
  left: 0rpx;

  width: 100%;
  height: 90%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
.address{
  width: 100%;
  height: 130rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;

  border-top: 1rpx dashed #a4f50e;
  border-bottom: 1rpx dashed #a4f50e;
}

.address .address-item{
  width: 80%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.address-item .address-icon{
  width: 40rpx;
  height: 60rpx;
}

.address-item .address-desc{
  width: auto;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-start;
  margin-left: 20rpx;
}

.address-desc .address-rcv-desc{
  width: auto;
  height: 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.address-rcv-desc .address-rcv-people{
  width: auto;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 25rpx;
}

.address-rcv-desc .address-rcv-phone{
  width: auto; 
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 25rpx;
  margin-left: 20rpx;
}

.address-desc-value{
  width: auto;
  height: 60rpx;
   line-height: 60rpx;
  text-align: center;
  font-size: 20rpx;
}

.address-modify-icon{
  width: 35rpx;
  height: 35rpx;
}

.shopping-item{
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  background: #f8f7f7;
  border-bottom: 1rpx solid #dfdfdf;
}

.shoppingn-select{
  width: 45rpx;
  height: 45rpx; 
}

.shopping-commodity{
  width: 90%;
  height: 180rpx;

  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.commodity-icon{
   width: 180rpx;
  height: 180rpx;
}

.commodity-desc{
  width: 70%;
  height: 180rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items:flex-start;
}

.commodity-desc-title{
  width: 100%;
  height: 60rpx;
  text-align: left;
  font-size: 25rpx;
}

.commodity-desc-price{
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  text-align: left;
  font-size: 20rpx;
}

.commodity-price-item{
  width: 100%;
  height: 70rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.commodity-price{
  width: 100rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  color: #ff5e00;
  font-size: 35rpx;
}

.commodity-count-modity{
  width: 180rpx;
  height: 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.commodity-count-minus{
  width: 50rpx;
  height: 50rpx;
}


.commodity-count-title{
  width: 80rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 30rpx;
}
.commodity-count-add{
    width: 50rpx;
  height: 50rpx;
}







.order-view{
  position: fixed;
  top: 92%;
  left: 0;
  width: 100%;
  height: 8%;

  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  border-top: 1rpx solid #f5f5f5;
}

.select-menu{
  width: 20%;
  height: 45rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.select-menu .select-icon{
  width: 45rpx;
  height: 45rpx;
}

.select-menu .select-text{
  width: auto;
  height: 45rpx;
  line-height: 45rpx;
  text-align: center;
  font-size: 25rpx;
}

.order-menu{
  width: 80%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}

.order-info-title{
  width: auto;
  height: 45rpx;
  line-height: 45rpx;
  text-align: center;
  font-size: 25rpx;
   margin-right: 20rpx;
}


.order-info-price{
  width: auto;
  height: 45rpx;
  line-height: 45rpx;
  text-align: center;
  font-size: 30rpx;
  color: #ee653b;
   margin-right: 10rpx;
}

.order-in-view{
  width: 160rpx;
  height: 100%;
  background: #ee653b;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.order-in-view-none{
  width: 160rpx;
  height: 100%;
  background: #c4c0bf;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.order-in{
  width: 100%;
  height: 45rpx;
  line-height: 45rpx;
  text-align: center;
  font-size: 25rpx;
  color:#fcfcfc;
}



